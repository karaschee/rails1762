<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rails1762</title>

  <!-- Stylesheets -->
  <%= stylesheet_link_tag "console", media: "all", "data-turbolinks-track" => true %>
  <%= render 'layouts/stylesheets' %>

  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/console/header' %>

  <% unless yield(:is_signin).present? %>
    <div class="container">
      <div class="row">
        <div class="col-sm-3" role="navigation">
          <%= render 'layouts/console/nav' %>
        </div>

        <div class="col-sm-9">
          <%= render partial: "layouts/console/flash" %>
          <%= yield %>
        </div>
      </div>

      <hr>

      <footer>
        <p>Â© Company 2014</p>
      </footer>

    </div>
  <% else %>
    <div class="container">
      <div class="row">
        <div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-6" role="navigation">
          <%= render partial: "layouts/console/flash" %>
          <%= yield %>
        </div>
      </div>
    </div>
  <% end %>
  
  <!-- Javascripts -->
  <script type="text/javascript">
    _TOKEN_ = "<%= form_authenticity_token %>";
  </script>
  <%= javascript_include_tag "console", "data-turbolinks-track" => true %>
  <%= render 'layouts/javascripts' %>
</body>
</html>