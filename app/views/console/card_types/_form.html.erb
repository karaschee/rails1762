<p class="lead"> <%= render_form_action(@card_type) %>资料卡分类 </p>
<%= render partial: 'console/shared/errors', locals: { object: @card_type } %>
<%= simple_form_for([:console, @card_type], html: { class: "form" }, defaults: { input_html: { class: 'form-control' } }) do |f| %>
  <%= f.input :name, label: "名称" %>
  <%= f.input :desc, label: "描述", as: :text, input_html: { rows: "10" } %>

  <div class="form-group">
    <button type="submit" class="btn btn-primary"><%= render_form_action(@card_type) %></button>
  </div>
<% end %>