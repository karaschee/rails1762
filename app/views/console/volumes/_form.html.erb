<p class="lead">
  <%= render_form_action(@volume) %>节目
  <% unless @volume.new_record? %> -
    <%= link_to @volume.title, volume_url(@volume), target: "_blank" %>
    <small> / <%= link_to "资料卡管理", console_volume_timelines_url(@volume) %> </small>
  <% end %>
</p>

<%= render partial: 'console/shared/errors', locals: { object: @volume } %>

<%= simple_form_for([:console, @volume], html: { class: "form" }, defaults: { input_html: { class: 'form-control' } }) do |f| %>
  <%= f.input :title, label: "标题" %>
  <%= f.input :no, label: "期数" %>
  <%= f.association :show, prompt: true, label: "所属频道" %>

  <%= render :partial => "console/shared/upload_thumb_image_fields", locals: { f: f } %>

  <%= f.input :desc, label: "描述", as: :text, input_html: { rows: "5" } %>
  <div class="form-group">
    <label>内容</label>
    <div id="epiceditor">
      <%= f.text_area :content, rows: "12", class: "form-control" %>
    </div>
  </div>
  <%#= f.input :content, label: "内容", input_html: { rows: 12 } %>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">编辑</button>
  </div>
<% end %>
