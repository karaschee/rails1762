<p class="lead"> <%= render_form_action(@show) %>频道 </p>

<%= render partial: 'console/shared/errors', locals: { object: @show } %>

<%= simple_form_for([:console, @show], html: { class: "form", multipart: true }, defaults: { input_html: { class: 'form-control' } }) do |f| %>
  <%= f.input :name, label: "频道名" %>

  <%= render :partial => "console/shared/upload_thumb_image_fields", locals: { f: f } %>

  <%= f.input :desc, label: "描述", as: :text, input_html: { rows: "5" } %>

  <div class="form-group">
    <label>内容</label>
    <div id="epiceditor">
      <%= f.text_area :content, rows: "12", class: "form-control" %>
    </div>
  </div>
  <%#= f.input :content, label: "内容", input_html: { rows: "10" } %>

  <div class="form-group">
    <button type="submit" class="btn btn-primary"><%= render_form_action(@show) %></button>
  </div>
<% end %>

<%= content_for :javascripts do %>
  <script type="text/javascript">     
  </script>
<% end %>
